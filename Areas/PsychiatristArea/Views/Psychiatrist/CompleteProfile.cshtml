@model PsychiatristViewModel
@{
    ViewData["Title"] = "Complete Psychiatrist Profile";
    Layout = "_Layout"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CompleteProfile" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="PsychoName" class="form-label fw-bold"></label>
                            <input asp-for="PsychoName" class="form-control" />
                            <span asp-validation-for="PsychoName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PsychoEmail" class="form-label fw-bold"></label>
                            <input asp-for="PsychoEmail" class="form-control" readonly />
                            <span asp-validation-for="PsychoEmail" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PsychoAge" class="form-label fw-bold"></label>
                            <input asp-for="PsychoAge" class="form-control" />
                            <span asp-validation-for="PsychoAge" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PsychoGender" class="form-label fw-bold"></label>
                            <select asp-for="PsychoGender" class="form-select">
                                <option value="">-- Select Gender --</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="PsychoGender" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PsychoPhone" class="form-label fw-bold"></label>
                            <input asp-for="PsychoPhone" class="form-control" />
                            <span asp-validation-for="PsychoPhone" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HospitalName" class="form-label fw-bold"></label>
                            <input asp-for="HospitalName" class="form-control" />
                            <span asp-validation-for="HospitalName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialization" class="form-label fw-bold"></label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PsychoImage" class="form-label fw-bold"></label>
                            <input asp-for="PsychoImage" type="file" class="form-control" />
                            <span asp-validation-for="PsychoImage" class="text-danger small"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-5 py-2 fw-bold">Save Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
