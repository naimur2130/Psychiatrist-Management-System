@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mt-4">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">All Users</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover text-center" id="_dataTable">
            <thead class="thead-light">
                <tr>
                    <th class="bg-secondary text-white">Email</th>
                    <th class="bg-secondary text-white">Phone Number</th>
                    <th class="bg-secondary text-white">Role</th>
                    <th class="bg-secondary text-white">Actions</th>
                </tr>
            </thead>

        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/userdetails.js" asp-append-version="true"></script>
}

